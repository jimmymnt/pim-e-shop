<div class="teaser card custom-standard-card mb-4 shadow-sm">
    <div class="text-decoration-none text-dark">
        {% if event.mainImage %}
            {{ pimcore_image_thumbnail_html(event.mainImage, 'standardTeaser', { imgAttributes: {class: 'img-fluid'} }) }}
        {% endif %}
        <div class="card-body text-left">
            <h4 class="card-title pricing-card-title text-uppercase text-left">{{ event.title }}</h4>
            <p class="card-text">
                {{ event.description | striptags | slice(0, 150) ~ '...' }}
            </p>
            <hr>
            <p>
                <span><strong>Address:</strong></span> {{ event.locationAddress }}
            </p>
            <hr>
            <span><strong>Time:</strong></span> {{ event.fromDate|date('F jS Y') }} - {{ event.toDate|date('F jS Y') }}
        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary">{{ 'general.details' | trans }}</a>
        </div>
    </div>
</div>